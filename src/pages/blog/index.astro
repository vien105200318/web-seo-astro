---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import BlogCard from '../../components/BlogCard.astro';
import { getCollection } from 'astro:content';

// Get all blog posts sorted by date
const allPosts = await getCollection('blog');
const sortedPosts = allPosts.sort((a, b) => 
  b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<Layout
  title="Blog - Horror Dev Journey | 50 Posts"
  description="All 50 blog posts documenting the journey of a solo dev creating a Vietnamese horror game"
>
  <Header />
  
  <main>
    <section class="blog-header">
      <div class="container">
        <h1>The Entire Journey</h1>
        <p class="subtitle">50 posts from idea to launch - raw, honest, and emotional</p>
      </div>
    </section>
    
    <section class="blog-list">
      <div class="container">
        <div class="filter-section">
          <p class="post-count">Total: <strong>{sortedPosts.length} posts</strong></p>
        </div>
        
        <div class="posts-grid">
          {sortedPosts.map(post => (
            <BlogCard
              title={post.data.title}
              description={post.data.description}
              pubDate={post.data.pubDate}
              tags={post.data.tags}
              slug={post.slug}
              image={post.data.image}
            />
          ))}
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>

<style>
  .blog-header {
    padding: var(--spacing-2xl) 0 var(--spacing-xl);
    text-align: center;
    background: linear-gradient(135deg, var(--color-bg-primary) 0%, var(--color-bg-secondary) 100%);
  }
  
  .blog-header h1 {
    margin-bottom: var(--spacing-md);
  }
  
  .subtitle {
    font-size: var(--text-lg);
    color: var(--color-text-secondary);
    max-width: 600px;
    margin: 0 auto;
  }
  
  .blog-list {
    padding: var(--spacing-2xl) 0;
  }
  
  .filter-section {
    margin-bottom: var(--spacing-xl);
    text-align: center;
  }
  
  .post-count {
    font-size: var(--text-lg);
    color: var(--color-text-secondary);
  }
  
  .post-count strong {
    color: var(--color-accent-orange);
  }
  
  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: var(--spacing-lg);
  }
  
  @media (max-width: 768px) {
    .posts-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
